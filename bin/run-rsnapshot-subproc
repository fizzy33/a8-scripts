#!/usr/bin/env python3



import os
import datetime
from pathlib import Path
import sys
import subprocess
import shutil
import healthchecks
import rotation

# detect if we are sunday (full backup) or another day (diff)

rsnapshot_config_file = Path(sys.argv[1])
stanza = sys.argv[2]

# 0 3  * * * /usr/bin/runitor -ping-key=XYZPDQ-AAAAAAAAAAA -slug=superbee-rsnapshot -- /usr/bin/rsnapshot -c /root/backups/rsnapshot-superbee.conf daily
# 0 4  * * * /usr/bin/runitor -ping-key=XYZPDQ-AAAAAAAAAAA -slug=connectria-rsnapshot -- /usr/bin/rsnapshot -c /root/backups/rsnapshot-connectria.conf daily


neededRotations = rotation.load_needed_rsnapshot_rotations(stanza)

rotationNames = neededRotations.map(lambda r: r.rotationName).mk_str(" ")
print(f"rotationNames -- {rotationNames}")

if neededRotations.is_empty():
    print("no rotations needed")

else:

    def run_rsnapshot(action: str) -> None:
        command = [
            "rsnapshot",
            "-c",
            rsnapshot_config_file,
            action,
        ]

        print(f"running -- {command}")

        retcode = subprocess.call(command, cwd = rsnapshot_config_file.parent)

        if retcode != 0:
            print(f"command failed {retcode}")
            sys.exit(retcode)

    run_rsnapshot("sync")

    for r in neededRotations:
        run_rsnapshot(r.rotationName)
        r.rotationCompletedSuccessfully()



